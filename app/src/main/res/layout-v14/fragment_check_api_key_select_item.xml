<?xml version="1.0" encoding="utf-8"?>
<de.matdue.isk.widget.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dip"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_marginLeft="16dip"
        android:layout_gravity="center_vertical"
        android:id="@+id/fragment_check_api_key_select_item_image"
        android:maxHeight="40dip"
        android:maxWidth="40dip"
        android:scaleType="fitCenter"
        android:contentDescription="@string/pilots_portrait" />

    <CheckedTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dip"
        android:layout_gravity="center_vertical"
        android:paddingRight="7dip"
        android:paddingTop="5dip"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:id="@+id/fragment_check_api_key_select_item_text"
        android:ellipsize="marquee"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:checked="false"
        android:singleLine="true" />
</de.matdue.isk.widget.CheckableLinearLayout>
