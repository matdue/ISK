<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Dummy item to prevent TextView from receiving focus -->
        <LinearLayout
            android:id="@+id/pilots_focus_dummy"
            android:focusable="true" android:focusableInTouchMode="true"
            android:layout_width="0px" android:layout_height="0px">
            <requestFocus/>
        </LinearLayout>

        <TextView
            android:id="@+id/key_authentication_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pilots_key_intro"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/key_authentication_failed_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingTop="16dp"
            android:text="@string/pilots_key_first" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/pilots_key_button_choose"
            android:id="@+id/key_ask_api_key"
            android:onClick="gotoAskKey"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingTop="16dp"
            android:text="@string/pilots_key_second" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/pilots_key_button_create"
            android:id="@+id/key_create_api_key"
            android:onClick="gotoCreateKey"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:linksClickable="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingTop="16dp"
            android:text="@string/pilots_key_third" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/key_input_id"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:hint="@string/pilots_key_hint_id" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/key_input_vCode"
            android:layout_marginBottom="8dp"
            android:hint="@string/pilots_key_hint_verificationcode" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pilots_key_button_add"
            android:id="@+id/key_submit_button"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:onClick="gotoSubmitKey"/>

    </LinearLayout>
</ScrollView>